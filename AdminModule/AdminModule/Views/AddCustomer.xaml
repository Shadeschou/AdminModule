<UserControl
    x:Class="AdminModule.Views.AddCustomer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ViewModels="clr-namespace:AdminModule.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AdminModule.Services"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:services="clr-namespace:AdminModule.Services"
    d:DesignHeight="720"
    d:DesignWidth="1280"
    mc:Ignorable="d">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <services:TextInputToVisibilityConverter x:Key="TextInputToVisibilityConverter" />

        <Style x:Key="EntryFieldStyle" TargetType="Grid">
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="20,0" />
        </Style>
    </UserControl.Resources>
    <StackPanel Background="#FFF">


        <Grid Height="900">
            <Grid.ColumnDefinitions>

                <ColumnDefinition Width="291*" />
                <ColumnDefinition Width="292*" />
                <ColumnDefinition Width="291*" />
                <ColumnDefinition Width="291*" />
                <ColumnDefinition Width="291*" />


            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>

                <RowDefinition Height="0.25*" />
                <RowDefinition Height="0.5*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Input Field Labes -> These are made to match the DB  -->
            <Label Grid.Column="0" Content="Add Name" />
            <Label Grid.Column="1" Content="Add Address" />
            <Label Grid.Column="2" Content="Phone" />
            <Label Grid.Column="3" Content="Mail" />
            <Label Grid.Column="4" Content="Password" />

            <!--  Input Fields  -->




            <TextBlock
                Grid.Row="1"
                Margin="1,30,1,1"
                HorizontalAlignment="Center"
                VerticalAlignment="Stretch"
        
                Text="Input Name"
                Visibility="{Binding ElementName=NameInputField, Path=Text.IsEmpty, Converter={StaticResource BooleanToVisibilityConverter}}" />
            <TextBox
                Focusable="True"
                Name="NameInputField"
                Grid.Row="1"
                Background="Transparent"
                Text="{Binding NameInput}" />

            <TextBlock
                Grid.Row="1"
                Grid.Column="1"
              
                Margin="1,30,1,1"
                HorizontalAlignment="Center"
                VerticalAlignment="Stretch"
                Text="Enter Address"
                Visibility="{Binding ElementName=AddressInputField, Path=Text.IsEmpty, Converter={StaticResource BooleanToVisibilityConverter}}" />
            <TextBox
                Focusable="True"
                Name="AddressInputField"
                Grid.Row="1"
                Grid.Column="1"
                Background="Transparent"
                Text="{Binding NameInput}" />

            <TextBlock
                Grid.Row="1"
            
                Grid.Column="2"
                Margin="1,30,1,1"
                HorizontalAlignment="Center"
                VerticalAlignment="Stretch"
                Text="Input PhoneNo"
                Visibility="{Binding ElementName=PhoneNoInputField, Path=Text.IsEmpty, Converter={StaticResource BooleanToVisibilityConverter}}" />
            <TextBox
                Focusable="True"
                Name="PhoneNoInputField"
                Grid.Row="1"
                Grid.Column="2"
                Background="Transparent"
                Text="{Binding NameInput}" />


            <TextBlock
                Grid.Row="1"
                Grid.Column="3"
                Margin="1,30,1,1"
                HorizontalAlignment="Center"
              
                VerticalAlignment="Stretch"
                Text="Input Mail"
                Visibility="{Binding ElementName=MailInputField, Path=Text.IsEmpty, Converter={StaticResource BooleanToVisibilityConverter}}" />
            <TextBox
                Focusable="True"
                Name="MailInputField"
                Grid.Row="1"
                Grid.Column="3"
                Background="Transparent"
                Text="{Binding NameInput}" />


            <TextBlock
                Grid.Row="1"
               
                Grid.Column="4"
                Margin="1,30,1,1"
                HorizontalAlignment="Center"
                VerticalAlignment="Stretch"
                Text="Input Password"
                Visibility="{Binding ElementName=PasswordInputField, Path=Text.IsEmpty, Converter={StaticResource BooleanToVisibilityConverter}}" />
            <TextBox
                
                Focusable="True"
                Name="PasswordInputField"
                Grid.Row="1"
                Grid.Column="4"
                Background="Transparent"
                Text="{Binding NameInput}" />









            <Grid Grid.Row="2" Grid.ColumnSpan="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--  Buttons  -->
                <Button
                    x:Name="AddButton"
                    Grid.Row="1"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    HorizontalAlignment="Stretch"
                    Command="{Binding InsertCommand}"
                    Content="Add"
                    Style="{StaticResource ButtonStyle}" />
                <Button
                    x:Name="ResetButton"
                    Grid.Row="1"
                    Grid.Column="2"
                    Grid.ColumnSpan="3"
                    HorizontalAlignment="Stretch"
                    Content="Reset"
                    Style="{StaticResource ButtonStyle}" />
            </Grid>
        </Grid>
    </StackPanel>

</UserControl>