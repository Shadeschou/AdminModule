<UserControl
    x:Class="AdminModule.Views.AddCustomer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ViewModels="clr-namespace:AdminModule.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="900"
    d:DesignWidth="1750"
    mc:Ignorable="d">

    <StackPanel Background="#FFF">


        <Grid Height="900">
            <Grid.ColumnDefinitions>
               
                <ColumnDefinition Width="291*" />
                <ColumnDefinition Width="292*" />
                <ColumnDefinition Width="291*" />
                <ColumnDefinition Width="291*" />


            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>

                <RowDefinition Height="*" />
                <RowDefinition Height="0.5*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Input Field Labes -> These are made to match the DB  -->
            <Label
                Grid.Column="0"
                Margin="1,1,1.333,1"
                Content="Add Name" />
            <Label
                Grid.Column="1"
                Margin="0.667,1,1.333,1"
                Content="Add Address" />
            <Label
                Grid.Column="2"
                Margin="0.667,1"
                Content="Phone" />
            <Label
                Grid.Column="3"
                Margin="1.333,1,1,1"
                Content="Mail" />

            <!--  Input Fields  -->
            <TextBox
                x:Name="AddUserStatusID"
                Grid.Row="1"
                Grid.Column="0"
                Text="{Binding NameInput}">
                <TextBox.DataContext>
                    <ViewModels:AddCustomerModel />
                </TextBox.DataContext>
            </TextBox>
            <TextBox
                x:Name="AddName"
                Grid.Row="1"
                Grid.Column="1"
                Text="{Binding AddressInput}">
                <TextBox.DataContext>
                    <ViewModels:AddCustomerModel />
                </TextBox.DataContext>
            </TextBox>
            <TextBox
                x:Name="AddAddress"
                Grid.Row="1"
                Grid.Column="2"
                Text="{Binding PhoneNumberInput}">
                <TextBox.DataContext>
                    <ViewModels:AddCustomerModel />
                </TextBox.DataContext>
            </TextBox>
            <TextBox
                x:Name="AddMail"
                Grid.Row="1"
                Grid.Column="3"
                Text="{Binding EmailInput}">
                <TextBox.DataContext>
                    <ViewModels:AddCustomerModel />
                </TextBox.DataContext>
            </TextBox>

            <!--  Buttons  -->
            <Button
                x:Name="AddButton"
                Grid.Row="3"
                Grid.ColumnSpan="2"
                Content="Add"
                Style="{StaticResource ButtonStyle}" />
            <Button
                x:Name="ResetButton"
                Grid.Row="3"
                Grid.Column="2"
                Grid.ColumnSpan="2"
                Content="Reset"
                Style="{StaticResource ButtonStyle}"/>


        </Grid>
    </StackPanel>

</UserControl>