<UserControl
    x:Class="AdminModule.Views.AddCustomer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ViewModels="clr-namespace:AdminModule.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="900"
    d:DesignWidth="1750"
    mc:Ignorable="d">

    <StackPanel Background="#FFF">


        <Grid Height="900">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />

            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Input Field Labes -> These are made to match the DB  -->
            <Label Content="Add UserID" />
            <Label Grid.Column="1" Content="Add UserStatusID" />
            <Label Grid.Column="2" Content="Add Name" />
            <Label Grid.Column="3" Content="Add Address" />
            <Label Grid.Column="4" Content="Phone" />
            <Label Grid.Column="5" Content="Mail" />

            <!--  Input Fields  -->
            <TextBox
                x:Name="AddUserID"
                Grid.Row="1"
                Grid.Column="0"
                Margin="2,2.333,2.333,10.333"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                FontSize="10"
                Grid.IsSharedSizeScope="True"
                ScrollViewer.CanContentScroll="True"
                SelectionOpacity="0.7"
                Text="{Binding UserIDInput}"
                UseLayoutRounding="True"
                VerticalScrollBarVisibility="Auto">
                <TextBox.DataContext>
                    <ViewModels:AddCustomerModel />
                </TextBox.DataContext>
            </TextBox>
            <TextBox
                x:Name="AddUserStatusID"
                Grid.Row="1"
                Grid.Column="1"
                Margin="1.667,2.333,1.667,10.333"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                FontSize="10"
                Grid.IsSharedSizeScope="True"
                ScrollViewer.CanContentScroll="True"
                SelectionOpacity="0.7"
                Text="{Binding UserStatusIDInput}"
                UseLayoutRounding="True"
                VerticalScrollBarVisibility="Auto">
                <TextBox.DataContext>
                    <ViewModels:AddCustomerModel />
                </TextBox.DataContext>
            </TextBox>
            <TextBox
                x:Name="AddName"
                Grid.Row="1"
                Grid.Column="2"
                Margin="2.333,2.333,2,10.333"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                FontSize="10"
                Grid.IsSharedSizeScope="True"
                ScrollViewer.CanContentScroll="True"
                SelectionOpacity="0.7"
                Text="{Binding NameInput}"
                UseLayoutRounding="True"
                VerticalScrollBarVisibility="Auto">
                <TextBox.DataContext>
                    <ViewModels:AddCustomerModel />
                </TextBox.DataContext>
            </TextBox>
            <TextBox
                x:Name="AddAddress"
                Grid.Row="1"
                Grid.Column="3"
                Margin="2,2.333,2.333,10.333"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                FontSize="10"
                Grid.IsSharedSizeScope="True"
                ScrollViewer.CanContentScroll="True"
                SelectionOpacity="0.7"
                Text="{Binding AddressInput}"
                UseLayoutRounding="True"
                VerticalScrollBarVisibility="Auto">
                <TextBox.DataContext>
                    <ViewModels:AddCustomerModel />
                </TextBox.DataContext>
            </TextBox>
            <TextBox
                x:Name="AddPhone"
                Grid.Row="1"
                Grid.Column="4"
                Margin="1.667,2.333,1.667,10.333"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                FontSize="10"
                Grid.IsSharedSizeScope="True"
                ScrollViewer.CanContentScroll="True"
                SelectionOpacity="0.7"
                Text="{Binding PhoneNumberInput}"
                UseLayoutRounding="True"
                VerticalScrollBarVisibility="Auto">
                <TextBox.DataContext>
                    <ViewModels:AddCustomerModel />
                </TextBox.DataContext>
            </TextBox>
            <TextBox
                x:Name="AddMail"
                Grid.Row="1"
                Grid.Column="5"
                Margin="2.333,2.333,2,10.333"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                FontSize="10"
                Grid.IsSharedSizeScope="True"
                ScrollViewer.CanContentScroll="True"
                SelectionOpacity="0.7"
                Text="{Binding EmailInput}"
                UseLayoutRounding="True"
                VerticalScrollBarVisibility="Auto">
                <TextBox.DataContext>
                    <ViewModels:AddCustomerModel />
                </TextBox.DataContext>
            </TextBox>

            <!--  Buttons  -->
            <Button
                x:Name="AddButton"
                Grid.Row="4"
                Grid.ColumnSpan="3"
                Margin="0,0,10,0"
                Content="Add"
                Style="{StaticResource ButtonStyle}" />
            <Button
                x:Name="ResetButton"
                Grid.Row="4"
                Grid.Column="3"
                Grid.ColumnSpan="3"
                Content="Reset"
                Style="{StaticResource ButtonStyle}" />


        </Grid>
    </StackPanel>

</UserControl>